doctype html
head
  link(rel="stylesheet", type="text/css", href="/css/styles.css")
  meta(charset="UTF-8")
  title Express Gallery
body
  .header
    h1.logo 
    | _architekt
  #content
    #single.clearfix
      .row
        for image in images
          .large-12.columns
            img(src=image.url)
            a.button(href="/gallery/"+image.id) View this photo
          .large-12.columns
            p= image.description
            a.button(href="/gallery/"+image.id+"/edit") Edit this photo!
            form(action='/gallery/'+image.id+'?_method=DELETE',method='POST')
              button.button(type="submit") Delete this photo!


  a.button(href="/new_photo") Add a new photo!

  #footer
  script(src='/js/jquery.js')