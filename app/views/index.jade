doctype html
head
  link(rel="stylesheet", type="text/css", href="/css/style.css")
  meta(charset="UTF-8")
  title Express Gallery
body
  #header
  #content
    #single.clearfix
      .row
        for image in images
          .large-12.columns
            img(src=image.url)

          .large-12.columns
            p= image.description
            a(href="/gallery/"+image.id+"/edit") Edit this photo!
            form(action='/gallery/'+image.id+'?_method=DELETE',method='POST')
              button(type="submit") Delete this photo!

  a(href="/new_photo") Add a new photo!

  #footer
  script(src='/js/jquery.js')
  
